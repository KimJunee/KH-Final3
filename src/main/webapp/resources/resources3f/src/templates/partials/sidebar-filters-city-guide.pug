#filters-sidebar.offcanvas.offcanvas-start.offcanvas-collapse
  .offcanvas-header.d-flex.d-lg-none.align-items-center
    h2.h5.mb-0 Filters
    button(type='button' data-bs-dismiss='offcanvas').btn-close

  // Search form
  .offcanvas-header.d-block.border-bottom.pt-0.pt-lg-4.px-lg-0
    form.form-group.mb-lg-2.rounded-pill
      .input-group
        span.input-group-text.text-muted
          i.fi-search
        input(type='text' placeholder='Search...').form-control
      button(type='button').btn.btn-primary.rounded-pill.d-lg-inline-block.d-none Search
      button(type='button').btn.btn-icon.btn-primary.rounded-circle.flex-shrink-0.d-lg-none.d-inline-flex
        i.fi-search.mt-n2

  // Nav tabs
  .offcanvas-header.d-block.border-bottom.py-lg-4.py-3.px-lg-0
    ul(class='nav nav-pills' role='tablist')
      li.nav-item
        a(href='#categories' data-bs-toggle='tab' role='tab').nav-link.d-flex.align-items-center.active
          i.fi-list.me-2
          | Categories
      li.nav-item
        a(href='#filters' data-bs-toggle='tab' role='tab').nav-link.d-flex.align-items-center
          i.fi-filter-alt-horizontal.me-2
          | Filters

  .offcanvas-body.py-lg-4

    // Tabs content
    .tab-content

      // Categories
      div(id='categories' class='tab-pane fade show active' role='tabpanel')
        .row.row-cols-lg-2.row-cols-1.g-3
          .col
