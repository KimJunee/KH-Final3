              .icon-box-media.bg-faded-accent.text-accent.rounded-circle.mb-3.mx-auto
                i.fi-bed
              h3.icon-box-title.fs-base.mb-0 Accommodation
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-primary.text-primary.rounded-circle.mb-3.mx-auto
                i.fi-dumbell
              h3.icon-box-title.fs-base.mb-0 Fitness &amp; Sport
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-warning.text-warning.rounded-circle.mb-3.mx-auto
                i.fi-cafe
              h3.icon-box-title.fs-base.mb-0 Food &amp; Drink
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-success.text-success.rounded-circle.mb-3.mx-auto
                i.fi-disco-ball
              h3.icon-box-title.fs-base.mb-0 Night Life
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-primary.text-primary.rounded-circle.mb-3.mx-auto
                i.fi-shopping-bag
              h3.icon-box-title.fs-base.mb-0 Shopping
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-info.text-info.rounded-circle.mb-3.mx-auto
                i.fi-meds
              h3.icon-box-title.fs-base.mb-0 Medicine
          .col
            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
