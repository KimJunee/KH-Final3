              .icon-box-media.bg-faded-info.text-info.rounded-circle.mb-3.mx-auto
                i.fi-car
              h3.icon-box-title.fs-base.mb-0 Auto Service

      // Filters
      div(id='filters' class='tab-pane fade' role='tabpanel')
        .pb-4.mb-2
          h3.h6 Location
          select.form-select.mb-2
            option(value='' disabled) Choose city
            option(value='Berlin' selected) Berlin
            option(value='Hamburg') Hamburg
            option(value='Munich') Munich
            option(value='Koln') Koln
            option(value='Frankfurt am Main') Frankfurt am Main
          select.form-select
            option(value='' selected disabled) Choose district
            option(value='Berlin-Mitte') Berlin-Mitte
            option(value='Charlottenburg') Charlottenburg
            option(value='Prenzlauer Berg') Prenzlauer Berg
            option(value='Friedrichshain') Friedrichshain
            option(value='Kreuzberg') Kreuzberg
        .pb-4.mb-2
          h3.h6 Category
          .dropdown(data-bs-toggle='select').mb-sm-0.mb-3
            button(type='button' data-bs-toggle='dropdown').btn.btn-outline-secondary.d-flex.align-items-center.w-100.px-4.fw-normal.text-start.dropdown-toggle
              i.fi-list.me-2.text-muted
              span.dropdown-toggle-label.d-block.w-100 All categories
            input(type='hidden')
            ul.dropdown-menu.w-100
              li: a(href='#').dropdown-item
                i.fi-bed.me-2.fs-lg.opacity-60
                span.dropdown-item-label Accomodation
              li: a(href='#').dropdown-item
                i.fi-cafe.me-2.fs-lg.opacity-60
