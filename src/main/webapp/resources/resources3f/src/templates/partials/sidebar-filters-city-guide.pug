                span.dropdown-item-label Medicine
              li: a(href='#').dropdown-item
                i.fi-makeup.me-2.fs-lg.opacity-60
                span.dropdown-item-label Beauty
              li: a(href='#').dropdown-item
                i.fi-car.me-2.fs-lg.opacity-60
                span.dropdown-item-label Auto Service
