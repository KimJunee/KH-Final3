            a(href='#').icon-box.card.card-body.h-100.border-0.shadow-sm.card-hover.text-center
              .icon-box-media.bg-faded-primary.text-primary.rounded-circle.mb-3.mx-auto
                i.fi-entertainment
              h3.icon-box-title.fs-base.mb-0 Entertainment
