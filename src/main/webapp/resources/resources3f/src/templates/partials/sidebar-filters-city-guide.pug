            .d-flex.align-items-center
              .w-50.pe-2
                .input-group
                  span.input-group-text.fs-base $
                  input(type='text').form-control.range-slider-value-min
              .text-muted &mdash;
              .w-50.ps-2
                .input-group
                  span.input-group-text.fs-base $
                  input(type='text').form-control.range-slider-value-max
        .pb-4.mb-2
