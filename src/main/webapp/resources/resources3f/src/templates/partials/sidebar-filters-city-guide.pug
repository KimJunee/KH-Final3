              li: a(href='#').dropdown-item
                i.fi-shopping-bag.me-2.fs-lg.opacity-60
                span.dropdown-item-label Shopping
              li: a(href='#').dropdown-item
                i.fi-museum.me-2.fs-lg.opacity-60
