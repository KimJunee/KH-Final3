extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Vendor'
  - var pageTitle = 'Real Estate | Vendor Reviews'

//- Navbar
block navbar
  include partials/navbar-real-estate

//- Page Content
block content

  // Message modal
  #message-modal.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h3.fs-base.modal-title Message to Floyd Miles
          button(type='button' data-bs-dismiss='modal').btn-close.ms-0
        form(novalidate).modal-body.needs-validation
          .mb-4
            textarea(rows='6' placeholder='Type your message here' required).form-control
            .invalid-feedback Please type your message before sending.
          button(type='submit').btn.btn-primary.mb-2
            i.fi-send.me-2
            | Send message

  // Review modal
  #modal-review.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header.d-block.position-relative.border-0.pb-0.px-sm-5.px-4
          h3.modal-title.mt-4.text-center Leave a review
          button(type='button' data-bs-dismiss='modal' aria-label='Close').btn-close.position-absolute.top-0.end-0.mt-3.me-3
        .modal-body.px-sm-5.px-4
          form(novalidate).needs-validation
            .mb-3
              label(for='review-name').form-label Name <span class='text-danger'>*</span>
              input(type='text' id='review-name' placeholder='Your name' required).form-control
              .invalid-feedback Please let us know your name.
            .mb-3
              label(for='review-email').form-label Email <span class='text-danger'>*</span>
              input(type='email' id='review-email' placeholder='Your email address' required).form-control
              .invalid-feedback Please provide a valid email address.
            .mb-3
              label(for='review-rating').form-label Rating <span class='text-danger'>*</span>
              select(id='review-rating' required).form-select
                option(value='' selected disabled) Choose rating
                option(value='5 stars') 5 stars
                option(value='4 stars') 4 stars
                option(value='3 stars') 3 stars
                option(value='2 stars') 2 stars
                option(value='1 star') 1 star
              .invalid-feedback Please rate the property.
            .mb-4
              label(for='review-text').form-label Review <span class='text-danger'>*</span>
              textarea(id='review-text' rows='5' placeholder='Your review message' required).form-control
              .invalid-feedback Please write your review.
            button(type='submit').btn.btn-primary.d-block.w-100.mb-4 Submit a review


