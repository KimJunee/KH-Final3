  // Page container
  .container.mt-5.mb-md-4.py-5

    // Breadcrumbs
    nav(aria-label='breadcrumb').mb-4.pt-2.pt-lg-3
      ol.breadcrumb
        li.breadcrumb-item
          a(href='city-guide-home-v1.html') Home
        li.breadcrumb-item
          a(href='city-guide-account-info.html') Account
        li(aria-current='page').breadcrumb-item.active
          | Favorites


    // Account header
    .d-flex.align-items-center.justify-content-between.pb-4.mb-2
      .d-flex.align-items-center
        .position-relative.flex-shrink-0
          img(src='img/avatars/29.png' width='100' alt='Annette Black').rounded-circle.border.border-white
          button(type='button' data-bs-toggle='tooltip' title='Change image').btn.btn-icon.btn-light.btn-xs.rounded-circle.shadow-sm.position-absolute.end-0.bottom-0
            i.fi-pencil.fs-xs
        .ps-3.ps-sm-4
          h3.h4.mb-2 Annette Black
          +star-rating(5)
      a(href='signin-light.html').nav-link.p-0.d-none.d-md-block
        i.fi-logout.mt-n1.me-2
        | Sign out


    // Page content
    .card.card-body.p-4.p-md-5.shadow-sm

      // Account nav
      include partials/nav-account-city-guide

      .d-flex.flex-md-row.flex-column.align-items-md-center.justify-content-md-between.mb-4.pt-2
        h1.h3.mb-md-0 Favorite Listings

        // Sort
        .d-flex.align-items-sm-center.align-items-end
          .d-flex.flex-sm-row.flex-column.align-items-sm-center.w-100.pe-sm-2
            label(for='sortby').mb-sm-0.mb-2.me-sm-2.pe-sm-1.text-nowrap
              i.fi-arrows-sort.me-2
              | Sort by:
            select(id='sortby' style='min-width: 180px;').form-select.form-select-sm
              option Newest
              option Oldest
              option Rating
          a(href='#').d-inline-block.ms-sm-4.ms-3.mb-sm-0.mb-2.fs-sm.fw-bold.text-decoration-none.text-nowrap
            i.fi-x.fs-xs.me-2.align-middle
            | Clear all

      // Favorites grid
